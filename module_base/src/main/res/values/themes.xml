<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="base_Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_purple_500</item>
        <item name="colorPrimaryVariant">@color/base_purple_700</item>
        <item name="colorOnPrimary">@color/base_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/base_teal_200</item>
        <item name="colorSecondaryVariant">@color/base_teal_700</item>
        <item name="colorOnSecondary">@color/base_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="base_Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="base_Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="base_Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>